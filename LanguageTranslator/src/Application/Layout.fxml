<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.LayoutController">
   <top>
      <HBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="box1" onAction="#box1" style="-fx-background-radius: 10;">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ComboBox>
            <ImageView fx:id="arrow" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#arrowClick" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@arrow.png" />
               </image>
            </ImageView>
            <ComboBox fx:id="box2" onAction="#box2" style="-fx-background-radius: 10;">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </ComboBox>
            <Button fx:id="button" mnemonicParsing="false" onAction="#goButton" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 10;" styleClass="button_translate" stylesheets="@Layout.css" text="Translate">
               <HBox.margin>
                  <Insets left="50.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="clear" mnemonicParsing="false" onAction="#goClear" style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 10; -fx-text-fill: white; -fx-background-color: #999d9c;" text="clear">
               <HBox.margin>
                  <Insets right="50.0" />
               </HBox.margin></Button>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" top="20.0" />
         </padding>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </HBox>
   </top>
   <center>
      <VBox>
         <children>
            <SplitPane style="-fx-background-radius: 8;">
              <items>
                  <TextArea fx:id="text1" />
              </items>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </SplitPane>
            <SplitPane style="-fx-background-radius: 8;">
              <items>
                  <TextArea fx:id="text2" editable="false" />
              </items>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </SplitPane>
         </children>
      </VBox>
   </center>
   <bottom>
      <AnchorPane styleClass="labelBackground" stylesheets="@Layout.css" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="label_buttom" stylesheets="@Layout.css" text="Language Translator @ UoG">
               <padding>
                  <Insets bottom="2.0" left="5.0" top="2.0" />
               </padding>
            </Label>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
